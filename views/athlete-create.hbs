<section
  class="vh-100 bg-image"
  style="background-image: url('images/Athletes.jpg');"
>
  <div class="mask d-flex align-items-center h-100">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card card-transparent" style="border-radius: 15px;">
            <div class="card-body p-3">
              <h2 class="text-uppercase text-center mb-3">Create Athlete profile</h2>
              <form
                action="/athlete/create"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="form-outline mb-0">
                  <label class="form-label" for="form3Example1cg">Name</label>
                  <input
                    type="text"
                    id="form3Example1cg"
                    name="name"
                    class="form-control form-control-lg"
                  />

                </div>
                <div class="form-outline mb-0">
                  <label
                    class="form-label"
                    for="form3Example3cg"
                  >Nationality</label>
                  <input
                    type="text"
                    id="form3Example3cg"
                    name="nationality"
                    class="form-control form-control-lg"
                  />

                </div>
                <div class="form-outline mb-0">
                  <label
                    class="form-label"
                    for="form3Example3cg"
                  >Achivement</label>
                  <input
                    type="text"
                    id="form3Example3cg"
                    name="achievement"
                    class="form-control form-control-lg"
                  />

                </div>
                <br />
                <label for="dateofbirth">Date of birth:</label>
                <input type="date" id="dateofbirth" name="dateofbirth" />
                <div>
                  <label for="gender">Gender:</label>
                  <div class="form-check form-check-inline">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="gender"
                      id="male"
                      value="male"
                    />
                    <label class="form-check-label" for="male">Male</label>
                    <br />
                  </div>
                  <div class="form-check form-check-inline">
                    <br />
                    <input
                      class="form-check-input"
                      type="radio"
                      name="gender"
                      id="female"
                      value="female"
                    />
                    <label class="form-check-label" for="female">Female</label>
                  </div>
                </div>

                <input type="file" name="athlete-cover-image" />
                <br />
                <br />
                <button
                  type="submit"
                  class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"
                >Create</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>