  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="hidden-on-desktop">
            <img class="nav-photo--mobile" src="/images/nav-photo.jpg" />
        </div>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="header">
             <div class="navbar-nav nav-bar--mobile">
              <a href="/home" class="nav-link active">home</a>
              <a href="/athlete/athlete-list" class="nav-link">athletes</a>
              <a href="/Events" class="nav-link">events</a>
            </div>
            <div class="nav-photo hidden-on-mobile">
              <img  src="/images/nav-photo.jpg" />
            </div>
            <div class="navbar-nav ms-auto hidden-on-mobile nav-buttons">
              {{#if currentUser}}
                <a href="/auth/logout" class="nav-link"><button
                    class="btn btn-primary btn-gray-300"
                  >Logout</button></a>
              {{else}}
                <a href="/auth/signup" class="nav-link btn-min-w-100"><button
                    class="btn btn-primary btn-gray-300 "
                  >Sign up</button></a>
                <a href="/auth/login" class="nav-link"><button
                    class="btn btn-primary btn-gray-300"
                  >Login</button></a>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </nav>

