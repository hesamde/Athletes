<div class="athletes-page">
  <form id="form-search-athlete">
    <div class="search-profile">
      <a href="athlete-create" class="regular-btn mr-2">Create Athlete Profile</a>
      &nbsp;
      <div class="search-container">
        <a href="" class="regular-btn search-button"><i
            class="fa fa-search"
          ></i></a>
        <input
          name="athletesName"
          type="text"
          class="search-input"
          placeholder="Search for an athlete"
        />
      </div>
    </div>
  </form>
  <br />
</div>
{{! ------------------------------ }}
<br />
<div class="Athletes-album">

  {{#each list}}

    <a href="/athlete-info?id={{this.id}}"><div class="card">
        <img
          class="card-img-top"
          src={{this.imageUrl}}
          alt={{this.achievement}}
        />
        <div class="card-body">
          <p class="card-text">
            {{this.name}}
            |
            {{this.nationality}}
          </p>
          <p>{{this.achievement}}</p>
        </div>
      </div></a>

  {{/each}}

</div>